<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".OpcoesActivity" >

    <TextView
        android:id="@+id/txt_opcoes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/darker_gray"
        android:text="@string/op"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:id="@+id/btn_processo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/processo" />
	<Button
        android:id="@+id/btn_usuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user" />
	<Button
        android:id="@+id/btn_sistema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sis" />
	<Button
        android:id="@+id/btn_hardware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hard" />
	<Button
        android:id="@+id/btn_redes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/redes" />
	<Button
        android:id="@+id/btn_desligar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/halt" />
	
	 <Button
        android:id="@+id/btn_reiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/restart" />

</LinearLayout>
